{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "radix": true,
    "no-var-keyword": true,
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": [
      true,
      "always",
      "strict-bound-class-methods"
    ],
    "interface-name": false,
    "object-literal-sort-keys": false
  }
}
